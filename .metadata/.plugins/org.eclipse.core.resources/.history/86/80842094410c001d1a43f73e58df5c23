package fundamentos;

public class AreaCircunferencia {

	public static void main(String[] args) {

		// Definindo as variáveis
		double raio = 3.4;
		double PI = 3.14159;
		
		double area = PI * raio * raio;
		System.out.println(area);
		
		raio = 10;
		area = PI * raio * raio;
		System.out.println("Área = " + area);
	}
}
